/**
 * Submit handler to rebuild taxonomy field menu.
 *
 * Disable term links from taxonomy field menu, when this term and its
 * child terms don't have any nodes connected.
 */
function taxonomy_field_menu_rebuild_term_links($form, $form_state) {
  $taxonomy_field_menu = $form_state['values']['menu_object'];
  if (!isset($taxonomy_field_menu->menu_name)) {
    drupal_set_message(t("Sorry, there's no taxonomy field menu associated with this field."));
    return NULL;
  }
  $transaction = db_transaction();
  try {
    // Override default value.
    $taxonomy_field_menu->child_node = 1;
    $terms = taxonomy_get_tree($taxonomy_field_menu->vid);
    foreach ($terms as $term) {
      $nids = taxonomy_field_menu_get_term_all_nodes($term, $taxonomy_field_menu);
      // Disable this term link from taxonomy field menu.
      if (empty($nids)) {
        _taxonomy_field_menu_disable_term_link($term, $taxonomy_field_menu);
      }
      else {
        _taxonomy_field_menu_enable_term_link($term, $taxonomy_field_menu);
      }
    }
    drupal_set_message(t('taxonomy field menus have been rebuilt sucessfully!'));
  }
  catch (Exception $e) {
    $transaction->rollback();
    watchdog_exception('taxonomy_field_menu', $e);
    throw $e;
  }
}

/**
 * Submit handler to reset taxonomy field menu.
 *
 * Enable term links from taxonomy field menu, EVEN this term and its child
 * terms don't have any nodes connected.
 */
function taxonomy_field_menu_reset_term_links($form, $form_state) {
  $taxonomy_field_menu = $form_state['values']['menu_object'];
  if (!isset($taxonomy_field_menu->menu_name)) {
    drupal_set_message(t("Sorry, there's no taxonomy field menu associated with this field."));
    return NULL;
  }
  $transaction = db_transaction();
  try {
    // Override default value.
    $taxonomy_field_menu->child_node = 1;
    $terms = taxonomy_get_tree($taxonomy_field_menu->vid);
    foreach ($terms as $term) {
      _taxonomy_field_menu_enable_term_link($term, $taxonomy_field_menu);
    }
    drupal_set_message(t('taxonomy field menus have been reset sucessfully!'));
  }
  catch (Exception $e) {
    $transaction->rollback();
    watchdog_exception('taxonomy_field_menu', $e);
    throw $e;
  }
}

/**
 * Validate handler for taxonomy field ui form.
 */
function taxonomy_field_menu_field_menu_validate(&$form, &$form_state) {
  $taxonomy_field_menu = $form_state['values']['menu_object'];
  $menu_flag = $form_state['values']['menu_flag'];
  if (!$menu_flag && isset($taxonomy_field_menu->menu_name)) {
    if (isset($form_state['values']['delete_menu_flag']) && $form_state['values']['delete_menu_flag']) {
      // If user is sure to delete taxonomy field menu for this field,
      // do nothing.
    }
    else {
      $form_state['rebuild'] = TRUE;
      $form_state['delete_taxonomy_field_menu'] = 1;
      drupal_set_message(t("Do you really want to delete taxonomy field menu for this field? If so, please confirm in the last checkbox."), 'warning');
    }
  }
}

/**
 * Submit handler for taxonomy field ui form.
 *
 * There're three ui for user to manage taxonomy field menu, i.e, field
 * edit ui, term edit ui, default menu ui. Here's the back-end handling
 * for field ui.
 */
function taxonomy_field_menu_field_menu_submit($form, &$form_state) {
  $taxonomy_field_menu = $form_state['values']['menu_object'];
  $field_name = $form['#field']['field_name'];
  $field = $form['#field'];

  $menu_flag = $form_state['values']['menu_flag'];
  $menu['title'] = 'Taxonomy field menu for ' . $field_name;
  $menu['description'] = 'taxonomy field menu for ' . $field_name;
  $path = 'admin/structure/menu/manage/';

  $transaction = db_transaction();
  try {
    // Add a new taxonomy field menu when this field didn't have one.
    if ($menu_flag && !isset($taxonomy_field_menu->menu_name)) {
      // Add 'menu-' to the menu name to help avoid name-space conflicts.
      $menu['menu_name'] = 'menu-' . $form_state['values']['menu_machine_name'];

      // Add all terms links to this new menu.
      // It only counts the first vocabulary. If your contrib code uses
      // multiple vocabularies, the others will be ignored.
      $vocabulary_name = $form['#field']['settings']['allowed_values'][0]['vocabulary'];
      $vocabulary_ob = taxonomy_vocabulary_machine_name_load($vocabulary_name);

      // Manually rebuild a new taxonomy_field_menu object.
      $taxonomy_field_menu = array(
        'field_name' => $field_name,
        'vid' => $vocabulary_ob->vid,
        'menu_name' => $menu['menu_name'],
        'custom_page' => $form_state['values']['custom_page'],
        'child_node' => $form_state['values']['child_node'],
        'sync_node' => $form_state['values']['sync_node'],
        'sync_term' => $form_state['values']['sync_term'],
        'node_type' => arg(4),
        'url_alias' => $form_state['values']['url_alias'],
      );
      $taxonomy_field_menu = (object) $taxonomy_field_menu;
      // Add record to {taxonomy_field_menu}.
      _taxonomy_field_menu_insert_menu($taxonomy_field_menu);

      // Now save menu and links.
      $link['link_title'] = $menu['title'];
      $link['link_path'] = $path . $menu['menu_name'];
      $link['router_path'] = $path . '%';
      $link['module'] = 'taxonomy_field_menu';
      $link['plid'] = db_query("SELECT mlid FROM {menu_links} WHERE link_path = :link AND module = :module", array(
        ':link' => 'admin/structure/menu',
        ':module' => 'system',
      ))->fetchField();

      menu_link_save($link);
      menu_save($menu);

      // Add batch support for this handling.
      $batch = array(
        'title' => t('Initialize taxonomy field menu for field @field', array('@field' => $field_name)),
        'operations' => array(
          array('taxonomy_field_menu_initialize_taxonomy_field_menu', array($taxonomy_field_menu)),
        ),
      );
      batch_set($batch);

      drupal_set_message(t('taxonomy field menu for field @field has been created sucessfully.', array('@field' => $field_name)));
      watchdog('taxonomy field menu', 'taxonomy field menu for field @field has been created sucessfully.', array('@field' => $field_name));
    }
    elseif ($menu_flag && isset($taxonomy_field_menu->menu_name)) {
      // Update this taxonomy field menu.
      $taxonomy_field_menu->child_node = $form_state['values']['child_node'] ? 1 : 0;
      _taxonomy_field_menu_update_taxonomy_field_menu($taxonomy_field_menu);
    }
    elseif (!$menu_flag && isset($taxonomy_field_menu->menu_name)) {
      _taxonomy_field_menu_delete_menu($taxonomy_field_menu);

      drupal_set_message(t('taxonomy field menu for field @field has been deleted sucessfully.', array('@field' => $field_name)));
      watchdog('taxonomy field menu', 'taxonomy field menu for field @field has been deleted sucessfully.', array('@field' => $field_name));
    }
  }
  catch(Exception $e) {
    $transaction->rollback();
    watchdog_exception('taxonomy_field_menu', $e);
    throw $e;
  }
}

/**
 * Initialize taxonomy field menu for a taxonomy field.
 *
 * @param object $taxonomy_field_menu
 *   This taxonomy_field_menu object is manually created in code according
 *   to user's input from field edit ui. As there's a db transaction going,
 *   it's not possible to get $taxonomy_field_menu object from db before
 *   the whole initializing process is over.
 */
function taxonomy_field_menu_initialize_taxonomy_field_menu($taxonomy_field_menu, &$context) {
  // At this scenario, we need to reset $taxonomy_field_menu's sync_term
  // property.
  $taxonomy_field_menu->sync_term = 1;
  $terms = taxonomy_get_tree($taxonomy_field_menu->vid);
  $tids = array();
  if (!empty($terms)) {
    $count = count($terms);
    $context['sandbox']['progress'] = 0;
    // Add every term link, including associated nodes into {menu_links}.
    foreach ($terms as $term) {
      if (!isset($tids[$term->tid])) {
        $tids[$term->tid] = 1;
      }
      // If this term has already been inserted, we continue;
      else {
        continue;
      }
      $term_mlid = _taxonomy_field_menu_insert_term_link($term, $taxonomy_field_menu);
      // If this taxonomy field menu doesn't sync nodes, we continue;
      if (!$taxonomy_field_menu->sync_node) {
        continue;
      }
      $nids = _taxonomy_field_menu_get_term_field_nodes($term->tid, $taxonomy_field_menu->field_name);
      foreach ($nids as $nid) {
        // Add node link to {menu_links}.
        $title = _taxonomy_field_menu_get_node_title($nid);
        $node_link = array(
          'link_path' => 'node/' . $nid,
          'link_title' => $title,
          'menu_name' => $taxonomy_field_menu->menu_name,
          'plid' => $term_mlid,
          'router_path' => 'node/%',
          'module' => 'taxonomy_field_menu',
        );
        menu_link_save($node_link);
      }
      $context['sandbox']['progress']++;
      if ($context['sandbox']['progress'] != $count) {
        $context['sandbox']['finished'] = $context['sandbox']['progress'] / $count;
      }
    }
    watchdog('taxonomy field menus', 'taxonomy field menu for field :field_name has been created.', array(':field_name' => $taxonomy_field_menu->field_name));
  }
  $context['results'][] = 'Well done!';
  $context['message'] = 'Sucessfully initialized';
}

/**
 * Get term's all nodes, including possible child term's node.
 *
 * @param object $top_term
 *   This is the term object we need to process. The reason to call it
 *   'top_term', is because it could have child terms, and we need to get
 *   those child terms' nodes as well when $taxonomy_field_menu has specified
 *   child_node property.
 *
 * @param object $taxonomy_field_menu
 *   The taxonomy field menu object this term is working on. One notable thing
 *   is its child_node property will decide whether this functions collects
 *   child terms' nodes for $top_term.
 *
 * @return array
 *   An array nids associated to this $top_term via $taxonomy_field_menu. Or
 *   an empty array if no nid is found.
 */
function taxonomy_field_menu_get_term_all_nodes($top_term, $taxonomy_field_menu) {
  // Get nids connected to this term inside the menu.
  $nids = _taxonomy_field_menu_get_term_field_nodes($top_term->tid, $taxonomy_field_menu->field_name);

  // Need to add child term's nodes, if this taxonomy field menu requires it.
  if ($taxonomy_field_menu->child_node) {
    $tids = array($top_term->tid);
    while ($tids) {
      $next_generations = array();
      foreach ($tids as $tid) {
        $children = taxonomy_get_children($tid, $taxonomy_field_menu->vid);
        foreach ($children as $child) {
          $child_nids = _taxonomy_field_menu_get_term_field_nodes($child->tid, $taxonomy_field_menu->field_name);
          $nids = array_merge($nids, $child_nids);
          $next_generations[] = $child->tid;
        }
      }
      $tids = $next_generations;
    }
  }
  return $nids;
}

/**
 * Implements hook_node_insert().
 *
 * Add this node into taxonomy field menu, if condition is met.
 */
function taxonomy_field_menu_node_insert($node) {
  _taxonomy_field_menu_insert_node_link($node);
}

/**
 * Implements hook_node_update().
 *
 * Delete this node link from taxonomy field menu and generate it again.
 */
function taxonomy_field_menu_node_update($node) {
  // A better way is to detect whether ths node's taxonomy field has changed
  // firstly. If changed, we do delete and insert actions. However, since
  // this node link could be updated at default menu UI, it makes no sense to
  // compare this node itself at all.
  // Here we simply ignore the compare process. It means any changes about
  // this node link made through default menu UI will be reset to the newest
  // node taxonomy field status.
  _taxonomy_field_menu_delete_node_link($node);
  _taxonomy_field_menu_insert_node_link($node);
}

/**
 * Implements hook_node_delete().
 *
 * Delete this node from taxonomy field menu, if condition is met.
 */
function taxonomy_field_menu_node_delete($node) {
  _taxonomy_field_menu_delete_node_link($node);
}

/**
 * Implements hook_node_type_delete().
 *
 * Delete taxonomy field menus with this node type, if condition is met.
 */
function taxonomy_field_menu_node_type_delete($info) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus();
  $fields = field_info_field_map();
  foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
    if (isset($fields[$taxonomy_field_menu->field_name])) {
      $bundles = $fields[$taxonomy_field_menu->field_name]['bundles'];
      if (!isset($bundles['node'])) {
        continue;
      }
      $bundles = $bundles['node'];
      // If this deleted type is the only bundle for taxonomy field menu's
      // field, delete this taxonomy field menu too.
      if (count($bundles) > 1) {
        // If this menu has used this type as token, we need to delete it.
        // Assign another random available node type for this menu.
        if ($taxonomy_field_menu->node_type == $info->type) {
          foreach ($bundles as $bundle) {
            if ($taxonomy_field_menu->node_type != $bundle) {
              // Update node_type property.
              $taxonomy_field_menu->node_type = $bundle;
              _taxonomy_field_menu_update_taxonomy_field_menu($taxonomy_field_menu);
              // We don't handle url alias update here. This is the basic
              // design of pathauto. Admin could use bulk update for url
              // alias change.
              break;
            }
          }
        }
        continue;
      }
      if (in_array($info->type, $bundles)) {
        _taxonomy_field_menu_delete_menu($taxonomy_field_menu);
      }
    }
  }
}

/**
 * Implements hook_field_delete_field().
 *
 * Delete taxonomy field menu for this term field, if this field has a
 * taxonomy field menu.
 */
function taxonomy_field_menu_field_delete_field($field) {
  if ($field['type'] == 'taxonomy_term_reference') {
    // Get taxonomy field menu machine name, if there's one.
    $taxonomy_field_menu = _taxonomy_field_menu_get_menus(NULL, $field['field_name']);
    if ($taxonomy_field_menu) {
      // Need to delete this field's taxonomy field menu.
      _taxonomy_field_menu_delete_menu($taxonomy_field_menu);
    }
  }
}

