 */
function taxonomy_field_menu_taxonomy_term_delete($term) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus($term->vid);
  // Get one mlid, and decide whether need to delete its path alias.
  foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
    if (!$taxonomy_field_menu->sync_term) {
      continue;
    }
    taxonomy_field_menu_delete_term_path_alias($term, $taxonomy_field_menu);
    $mlid = _taxonomy_field_menu_get_term_mlid($term->tid, $taxonomy_field_menu);
    menu_link_delete($mlid);
  }
}

/**
 * Implements hook_taxonomy_term_insert().
 *
 * Insert taxonomy field menu for this term field, if condition is met.
 */
function taxonomy_field_menu_taxonomy_term_insert($term) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus($term->vid);

  foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
    _taxonomy_field_menu_insert_term_link($term, $taxonomy_field_menu);
  }
}

/**
 * Implements hook_taxonomy_term_update().
 *
 * Update each taxonomy field menu for this term, if condition is met.
 * What we care here is term name and term relation. Term name is going to
 * be used as link title, and term parent is going to decide its parent link.
 *
 * TODO: Needs to consider its parent link as customized link set by user
 * at default menu ui, which is probably not a term link.
 */
function taxonomy_field_menu_taxonomy_term_update($term) {
  _taxonomy_field_menu_taxonomy_term_update($term);
  drupal_set_message(t('Updated @term for its taxonomy field menu(s).', array('@term' => $term->name)));
}

/**
 * Implements hook_taxonomy_vocabulary_delete().
 *
 * Delete taxonomy field menu for this vocabulary, if condition is met.
 */
function taxonomy_field_menu_taxonomy_vocabulary_delete($vocabulary) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus($vocabulary->vid);
  foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
    // If this taxonomy field menu has set to not sync term, we continue.
    if (!$taxonomy_field_menu->sync_term) {
      continue;
    }
    _taxonomy_field_menu_delete_menu($taxonomy_field_menu);
  }
}

/**
 * Implements hook_form_FORM_ID_alter() for taxonomy_overview_terms().
 *
 * Delete taxonomy field menu for this term field, if condition is met.
 */
function taxonomy_field_menu_form_taxonomy_overview_terms_alter(&$form, &$form_state) {
  $form['#submit'][] = 'taxonomy_field_menu_term_overview_submit';
}

/**
 * Submit handler, reacting on form ID: taxonomy_overview_terms.
 */
function taxonomy_field_menu_term_overview_submit(&$form, &$form_state) {

  // Credits: Following condition code comes from taxonomy_menu module at d.g.
  // See https://drupal.org/project/taxonomy_menu.
  // This form has the following flow of buttons:
  // 1. [Save] --> rebuild taxonomy_menu
  // 2. [Reset to alphabetical] --> no rebuild yet
  // 3. [Reset to alphabetical][Reset to alphabetical] --> rebuild
  // 4. [Reset to alphabetical][Cancel] --> no rebuild
  // The code below avoids rebuilding after situation 2.
  if ($form_state['rebuild'] == FALSE && isset($form['#vocabulary']->vid)) {
    // Try to catch the 'Save' button.
    $vid = $form['#vocabulary']->vid;
  }
  elseif ($form_state['rebuild'] == TRUE && isset($form['#vocabulary']->vid)) {
    // Try to catch the 'Reset to alphabetical' button.
    $vid = NULL;
  }
  elseif ($form_state['rebuild'] == FALSE && isset($form['vid']['#value'])) {
    // Try to catch the second (confirming) 'Reset to alphabetical' button.
    $vid = $form['vid']['#value'];
  }
  else {
    // The button [Reset to alphabetical] [Cancel] does not call this page.
    $vid = NULL;
  }

  if (isset($vid)) {
    $terms = taxonomy_get_tree($vid);
    foreach ($terms as $term) {
      // Update each term.
      _taxonomy_field_menu_taxonomy_term_update($term);
    }
    drupal_set_message(t('Updated @vob for its taxonomy field menu(s).', array('@vob' => arg(3))));
  }
}

/**
 * Get term's FIRST parent's mlid.
 *
 * This parent exists in {menu_links} before this child term has been
 * inserted into {menu_links}.
 *
 * Anyway, multiple parents could lead to unpredicted results here. User
 * should avoid multiple term parents for this module.
 *
 * @param object $term
 *   Term object we are processing.
 *
 * @param object $taxonomy_field_menu
 *   taxonomy field menu object associated with this term, mainly used to
 *   provide taxonomy field menu's menu_name.
 *
 * @return int
 *   This term's parent term's mlid in {menu_links}, or 0 if none was found.
 */
function taxonomy_field_menu_get_term_parent_mlid($term, $taxonomy_field_menu) {
  // $term object may or may not contain its parents information, we use
  // following function to get its parents.
  $parents = taxonomy_get_parents($term->tid);
  $ptids = array_keys($parents);
  foreach ($ptids as $ptid) {
    $plid = _taxonomy_field_menu_get_term_mlid($ptid, $taxonomy_field_menu);
    if ($plid) {
      break;
    }
  }
  return isset($plid) ? $plid : 0;
}

/**
 * Insert a term link into {menu_links}.
 */
function _taxonomy_field_menu_insert_term_link($term, $taxonomy_field_menu) {
  // If this menu has been set to not sync term, we break.
  if (!$taxonomy_field_menu->sync_term) {
    return NULL;
  }
  $plid = taxonomy_field_menu_get_term_parent_mlid($term, $taxonomy_field_menu);
  // Insert this term's link for each taxonomy field menu.
  $link = array(
    'link_path' => 'taxonomy/term/' . $term->tid,
    'link_title' => $term->name,
    'menu_name' => $taxonomy_field_menu->menu_name,
    'weight' => $term->weight,
    'plid' => (!empty($plid)) ? $plid : 0,
    'router_path' => 'taxonomy/term/%',
    'module' => 'taxonomy_field_menu',
  );
  if ($taxonomy_field_menu->custom_page) {
    $link['link_path'] = 'taxonomy_field_menu/' . $taxonomy_field_menu->menu_name . '/' . $term->tid;
    $link['router_path'] = 'taxonomy_field_menu/%/%';
  }
  $term_mlid = menu_link_save($link);

  // Add path alias for this term.
  taxonomy_field_menu_insert_term_path_alias($term, $taxonomy_field_menu);
  return $term_mlid;
}

/**
 * Insert one node link into taxonomy field menu.
 *
 * @param object $node
 *   Node object we are processing.
 */
function _taxonomy_field_menu_insert_node_link($node) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus();
  foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
    // If this menu has set to not sync node, we continue.
    if (!$taxonomy_field_menu->sync_node) {
      continue;
    }
    $cache_flag = 1;
    $field_name = $taxonomy_field_menu->field_name;
    $menu_name = $taxonomy_field_menu->menu_name;

    if (isset($node->{$field_name})) {
      foreach ($node->{$field_name}['und'] as $delta => $value) {
        $plid = _taxonomy_field_menu_get_term_mlid($value['tid'], $taxonomy_field_menu);
        $link = array(
          'link_path' => 'node/' . $node->nid,
          'link_title' => $node->title,
          'menu_name' => $menu_name,
          'plid' => $plid,
          'router_path' => 'node/%',
          'module' => 'taxonomy_field_menu',
        );
        menu_link_save($link);
      }
    }
  }
}

/**
 * Delete one node's links from taxonomy field menu.
 *
 * @param object $node
 *   Node object we are processing.
 */
function _taxonomy_field_menu_delete_node_link($node) {
  $taxonomy_field_menus = _taxonomy_field_menu_get_menus();
  $menus = array();
  if ($taxonomy_field_menus) {
    foreach ($taxonomy_field_menus as $menu) {
      // If this menu has set to not sync node, we continue.
      if (!$menu->sync_node) {
        continue;
      }
      $menus[] = $menu->menu_name;
    }

    $query = db_select('menu_links', 'ml');
    $query->condition('ml.menu_name', $menus, 'IN')
      ->condition('ml.link_path', 'node/' . $node->nid)
      ->fields('ml', array('mlid'));
    $mlids = $query->execute()->fetchCol();

    foreach ($mlids as $mlid) {
      menu_link_delete($mlid);
    }
  }
}

/**
 * Update individual term link.
 *
 * @param object $term
 *   Term object we are processing.
 */
function _taxonomy_field_menu_taxonomy_term_update($term) {
  $transaction = db_transaction();
  try {
    $taxonomy_field_menus = _taxonomy_field_menu_get_menus($term->vid);
    // Iterate each taxonomy field menu.
    foreach ($taxonomy_field_menus as $taxonomy_field_menu) {
      // If this menu has set to not sync term, we continue.
      if (!$taxonomy_field_menu->sync_term) {
        continue;
      }
      $mlid = _taxonomy_field_menu_get_term_mlid($term->tid, $taxonomy_field_menu);
      if ($mlid) {
        $item = menu_link_load($mlid);
        // Update this term's link title, weight and its plid.
        $item['link_title'] = $term->name;
        $item['weight'] = $term->weight;
        $plid = taxonomy_field_menu_get_term_parent_mlid($term, $taxonomy_field_menu);
        // Override its parent link. If admin has added custom link as parent
        // link for this term in menu ui, it will be reset here. It's admin's
        // responsibility to take care of these custom parent links.
        // Only child links of term links will be un-reset.
        $item['plid'] = $plid;
        $mlid = menu_link_save($item);
      }
      taxonomy_field_menu_update_term_path_alias($term, $taxonomy_field_menu);
    }
  }
  catch (Exception $e) {
    $transaction->rollback();
    watchdog_exception('taxonomy_field_menu', $e);
    throw $e;
  }
}

/**
 * Disable taxonomy field menu links.
 *
 * @param object $term
 *   Disable this term's menu link in taxonomy field menus.
 *
 * @param object $taxonomy_field_menu
 *   Disable term's menu link for this taxonomy field menu.
 */
function _taxonomy_field_menu_disable_term_link($term, $taxonomy_field_menu) {
  $path = 'taxonomy/term/' . $term->tid;
  if ($taxonomy_field_menu->custom_page) {
    $path = 'taxonomy_field_menu/' . $taxonomy_field_menu->menu_name . '/' . $term->tid;
  }
  db_update('menu_links')
    ->fields(array('hidden' => 1))
    ->condition('menu_name', $taxonomy_field_menu->menu_name)
    ->condition('link_path', $path)
    ->execute();
}

/**
 * Enable taxonomy field menu links.
 *
 * @param object $term
 *   Enable this term's menu link in taxonomy field menus.
 *
 * @param object $taxonomy_field_menu
 *   Enable term's menu link for this taxonomy field menu.
 */
function _taxonomy_field_menu_enable_term_link($term, $taxonomy_field_menu) {
  $path = 'taxonomy/term/' . $term->tid;
  if ($taxonomy_field_menu->custom_page) {
    $path = 'taxonomy_field_menu/' . $taxonomy_field_menu->menu_name . '/' . $term->tid;
  }
  db_update('menu_links')
    ->fields(array('hidden' => 0))
    ->condition('menu_name', $taxonomy_field_menu->menu_name)
    ->condition('link_path', $path)
    ->execute();
}

/**
 * Delete one taxonomy field menu.
 *
 * @param object $taxonomy_field_menu
 *   This taxonomy field menu object we are processing.
 */
function _taxonomy_field_menu_delete_menu($taxonomy_field_menu) {
  $menu['menu_name'] = $taxonomy_field_menu->menu_name;
  // System-defined menus may not be deleted - only menus defined by this
  // module.
  $system_menus = menu_list_system_menus();
  if (isset($system_menus[$menu['menu_name']]) || !(db_query("SELECT 1 FROM {menu_custom} WHERE menu_name = :menu", array(':menu' => $menu['menu_name']))->fetchField())) {
    return;
  }

  // Reset all the menu links defined by the system via hook_menu().
  $result = db_query("SELECT * FROM {menu_links} ml INNER JOIN {menu_router} m ON ml.router_path = m.path WHERE ml.menu_name = :menu AND ml.module = 'system' ORDER BY m.number_parts ASC", array(':menu' => $menu['menu_name']), array('fetch' => PDO::FETCH_ASSOC));
  foreach ($result as $link) {
    menu_reset_item($link);
  }

  // Delete all links to the overview page for this menu.
  $result = db_query("SELECT mlid FROM {menu_links} ml WHERE ml.link_path = :link", array(':link' => 'admin/structure/menu/manage/' . $menu['menu_name']), array('fetch' => PDO::FETCH_ASSOC));
  foreach ($result as $link) {
    menu_link_delete($link['mlid']);
  }

  // We need to delete path alias for this taxonomy field menu, if this
  // taxonomy field menu has used custom term page.
  taxonomy_field_menu_delete_terms_path_alias($taxonomy_field_menu);

  menu_delete($menu);
  _taxonomy_field_menu_delete($menu);

}

/**
 * Get node(s) which has a tid value of term reference field.
 *
 * @param int $tid
 *   Term's tid. This is the term we need to get its direct associated nodes.
 *   To get term's child term nodes, see
 *   taxonomy_field_menu_get_term_all_nodes().
 *
 * @param string $field_name
 *   The taxonomy field with this term.
 *
 * @return array
 *   An array of nids. Or an emtpy array if no nid is found.
 *
 * @see taxonomy_field_menu_get_term_all_nodes()
 */
function _taxonomy_field_menu_get_term_field_nodes($tid, $field_name) {
  $nids = &drupal_static(__FUNCTION__, array());

  if (!isset($nids[$tid][$field_name])) {
    $field_table = 'field_data_' . $field_name;
    $query = db_select($field_table, 'f');
    // Only inlcude nodes published.
    $query->join('node', 'n', 'n.nid = f.entity_id');
    $query->condition('f.' . $field_name . '_tid', $tid);
    $query->condition('f.entity_type', 'node')
      ->condition('f.deleted', '0')
      ->condition('n.status', 1)
      ->fields('f', array('entity_id'));
    $nids[$tid][$field_name] = $query->execute()->fetchCol();
  }

  return $nids[$tid][$field_name];
}

/**
 * Get node title according to nid.
 *
 * This is a lightwieght function to get node title according to nid. The
 * popular way is to use node_load(), which will load the full node object
 * in memory, not necessary for our case.
 *
 * @param int $nid
 *   Node's nid.
 *
 * @return string
 *   Node's title.
 */
function _taxonomy_field_menu_get_node_title($nid) {
  $titles = &drupal_static(__FUNCTION__, array());
  if (!isset($titles[$nid])) {
    $query = db_select('node', 'n')
      ->fields('n', array('title'))
      ->condition('n.status', 1)
      ->condition('n.nid', $nid);
    $title = $query->execute()->fetchCol();
    $titles[$nid] = $title[0];
  }

  return $titles[$nid];
}

/**
 * Delete taxonomy field menu record from {taxonomy_field_menu}.
 *
 * @param array $menu
 *   This array contains only key -- 'menu_name'. Because menu_name is unique
 *   in table, we could use it to specificaly delete one taxonomy field menu
 *   entry.
 */
function _taxonomy_field_menu_delete($menu) {
  db_delete('taxonomy_field_menu')
    ->condition('menu_name', $menu['menu_name'])
    ->execute();
}

/**
 * Insert new taxonomy field menu to {taxonomy_field_menu}.
 *
 * @param object $taxonomy_field_menu
 *   This taxonomy_field_menu object we need to save into database.
 */
function _taxonomy_field_menu_insert_menu($taxonomy_field_menu) {
  db_insert('taxonomy_field_menu')
    ->fields(array(
        'field_name'  => $taxonomy_field_menu->field_name,
        'menu_name'   => $taxonomy_field_menu->menu_name,
        'vid'         => $taxonomy_field_menu->vid,
        'custom_page' => $taxonomy_field_menu->custom_page,
        'child_node'  => $taxonomy_field_menu->child_node,
        'sync_node'   => $taxonomy_field_menu->sync_node,
        'sync_term'   => $taxonomy_field_menu->sync_term,
        'node_type'   => $taxonomy_field_menu->node_type,
        'url_alias'   => $taxonomy_field_menu->url_alias,
      ))
    ->execute();
}

/**
 * Get taxonomy field menus from {taxonomy_field_menu}.
 *
 * It provides three parameters to get taxonomy field menu object(s).
 * According to the parameter order, once the previous parameter is provded,
 * next parameter(s) will be ignored. If no parameters are provided, it will
 * return an array of all taxonomy_field_menu in this site.
 *
 * As field_name and menu_name are unique keys inside {taxonomy_field_menu}
 * they will get one taxonomy_field_menu object, while vid could get multiple
 * taxonomy_field_menu assocaited.
 *
 * @param int $vid
 *   Vocabulary vid. One vocabulary could have many taxonomy field menus. If
 *   this parameter is provided, $field_name and $menu_name will be ignored.
 *
 * @param string $field_name
 *   Taxonomy field name. This parameter will be checked only when $vid is
 *   NULL. If this parameter is provided, $menu_name will be ignored.
 *
 * @param string $menu_name
 *   Taxonomy field menu's menu name. This parameter will be checked only when
 *   previous two parameters are NULL.
 *
 * @return object
 *   It will depend on the parameters to return one taxonomy_field_menu obejct
 *   (Null) or an array of taxonomy field menu objects(or empty array).
 */
function _taxonomy_field_menu_get_menus($vid = NULL, $field_name = NULL, $menu_name = NULL) {
  $menus = &drupal_static(__FUNCTION__);
  $vid_menus = &drupal_static(__FUNCTION__ . 'vid', array());
  $field_menu = &drupal_static(__FUNCTION__ . 'field', array());
  $menu_menu = &drupal_static(__FUNCTION__ . 'menu', array());

  $query = db_select('taxonomy_field_menu', 'tm')->fields('tm');

  if (empty($vid) && empty($field_name) && empty($menu_name)) {
    if (!isset($menus)) {
      $menus = $query->execute()->fetchAll();
    }
  }
  elseif (!empty($vid)) {
    if (!isset($vid_menus[$vid])) {
      $query->condition('tm.vid', $vid);
      $vid_menus[$vid] = $query->execute()->fetchAll();
    }
  }
  elseif (!empty($field_name)) {
    if (!isset($field_menu[$field_name])) {
      $query->condition('tm.field_name', $field_name);
      $field_menu[$field_name] = $query->execute()->fetchAll();
    }
  }
  elseif (!empty($menu_name)) {
    if (!isset($menu_menu[$menu_name])) {
      $query->condition('tm.menu_name', $menu_name);
      $menu_menu[$menu_name] = $query->execute()->fetchAll();
    }
  }

  if (empty($vid) && empty($field_name) && empty($menu_name)) {
    return $menus;
  }
  elseif (!empty($vid)) {
    return $vid_menus[$vid];
  }
  elseif (!empty($field_name)) {
    return reset($field_menu[$field_name]);
  }
  elseif (!empty($menu_name)) {
    return reset($menu_menu[$menu_name]);
  }

}

/**
 * Get term's mlid from {menu_links} with specific taxonomy field menu.
 *
 * @param int $tid
 *   Term's tid.
 *
 * @param object $taxonomy_field_menu
 *   taxonomy field menu object associated with this term.
 */
function _taxonomy_field_menu_get_term_mlid($tid, $taxonomy_field_menu) {
  $mlids = &drupal_static(__FUNCTION__, array());
  if (!isset($mlids[$taxonomy_field_menu->menu_name][$tid])) {
    $query = db_select('menu_links', 'ml');
    $query->condition('ml.menu_name', $taxonomy_field_menu->menu_name)
      ->fields('ml', array('mlid'));

    // Add link path and router path check according to custom_page config.
    if ($taxonomy_field_menu->custom_page) {
      $query->condition('ml.link_path', 'taxonomy_field_menu/' . $taxonomy_field_menu->menu_name . '/' . $tid)
        ->condition('ml.router_path', 'taxonomy_field_menu/%/%');
    }
    else {
      $query->condition('ml.link_path', 'taxonomy/term/' . $tid)
        ->condition('ml.router_path', 'taxonomy/term/%');
    }
    $result = $query->execute()->fetchField();
    $mlids[$taxonomy_field_menu->menu_name][$tid] = $result;
  }
  return $mlids[$taxonomy_field_menu->menu_name][$tid];
}

/**
 * Update a taxonomy field menu into database.
 *
 * @param object $taxonomy_field_menu
 *   taxonomy field menu object we are updating.
 */
function _taxonomy_field_menu_update_taxonomy_field_menu($taxonomy_field_menu) {
  db_update('taxonomy_field_menu')
    ->condition('field_name', $taxonomy_field_menu->field_name)
    ->fields(array(
      'node_type' => $taxonomy_field_menu->node_type,
      'child_node' => $taxonomy_field_menu->child_node))
    ->execute();
}
